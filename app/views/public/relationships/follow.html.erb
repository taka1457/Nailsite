<div class="row">
	<div id="followings" class="col-md-5 col-md-offset-1">
		<%= render partial: 'public/relationships/index', locals: { following_customers: @following_customers } %>
	</div>
	<div class="col-md-5">
		<% if @follower_customers.count > 0 %>
			<h3>Follower　　<%= @follower_customers.count %>人</h3>
		<% else %>
			<h3>Followerはいません</h3>
		<% end %>
		<div class="row">
			<div class="col-md-12">
				<table class="table">
					<thead>
						<tr>
							<th>ユーザー名</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @follower_customers.each do |follower_customer| %>
							<tr>
								<td>
									<%= link_to customer_path(follower_customer) do %>
										<%= follower_customer.full_name %>
									<% end %>　さん
								</td>
								<td><%= link_to 'chatを始める', customers_talk_path(follower_customer.id, follower_customer.id), class: "btn btn-default btn-xs"%></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

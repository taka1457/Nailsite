<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<h2>会員一覧<span class="sub_title">　のメニュー　　　<%= paginate @customers %></span></h2>
		<% @customers.each do |customer| %>
			<div class="col-md-4">
				<%= link_to customer_path(customer) do %>
				  <%= attachment_image_tag customer, :profile_image, format: "jpeg", fallback: "no-image.png", class: "profile_image" %>
				<% end %>
				<div class="row">
					<div class="col-md-9 col-md-offset-3">
						<%= link_to customer_path(customer) do %>
							<%= customer.full_name %>さん
						<% end %>
					</div>
					<% if shop_signed_in? %>
					<% else %>
						<div class="col-md-5">
							<% if current_customer != customer %>
								<%= link_to '行ったお店', customer_path(customer), class: "btn btn-default nav-btn" %>
							<% end %>
						</div>
						<div class="col-md-6">
							<% if customer_signed_in? %>
								<% if current_customer != customer %>
									<%= render partial: 'public/relationships/form', locals: { customer: customer } %>
								<% end %>
							<% else %>
								<%= link_to 'フォローする', new_customer_session_path, class: "btn btn-default nav-btn" %><br><br><br>
							<% end %>
						</div>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
</div>
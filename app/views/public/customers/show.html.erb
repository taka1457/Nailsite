<div class="row">
	<div class="col-md-10 col-md-offset-2">
		<h2>会員詳細</h2>
	</div>
	<div class="col-md-3 col-md-offset-2 col-xs-3 ">
		<%= attachment_image_tag @customer, :profile_image, format: "jpeg", fallback: "no-image.png", class: "profile_image" %>
	</div>
	<div class="col-md-4 col-xs-4 col-xs-offset-2">
		<table>
			<tbody>
				<tr>
					<td>
						<h3><%= @customer.full_name %>さん</h3><br><br>
						<span style="white-space: pre-wrap;"><%= @customer.introduction %></span><br><br>
					</td>
				</tr>
			</tbody>
		</table>
		<div class="row">
			<div class="col-md-5 col-xs-5">
				<span>Follow: <%= @customer.following_customer.count %></span>
			</div>
			<div class="col-md-6 col-xs-6">
				<span>Follower: <%= @customer.follower_customer.count %></span>
			</div>
		</div>
	</div>
	<div class="col-md-3">
		<% if customer_signed_in? %>
			<% if current_customer != @customer %>
				<span id="follow"><%= render partial: 'public/relationships/form', locals: { customer: @customer } %></span><br><br>
				<%= link_to 'Contact', customers_talk_path(@customer.id), class: "btn btn-default nav-btn"%>
			<% end %>
		<% elsif shop_signed_in? %>

			<%= link_to 'Contact', customers_talk_path(@customer.id), class: "btn btn-default nav-btn"%>
		<% else %>
			<%= link_to 'Follow', new_customer_session_path, class: "btn btn-default nav-btn" %><br><br>
	  		<%= link_to 'Contact', new_customer_session_path, class: "btn btn-default nav-btn"%>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-md-9 col-md-offset-2">
		<h2>行ったお店</h2>
	</div>
	<div class="col-md-8 col-md-offset-2">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>店舗名</th>
					<th>メニュー名</th>
					<th>コメント</th>
				</tr>
			</thead>
			<tbody>
				<% @reservation_history.each do |reservation_history| %>
				<% if reservation_history.reserve.customer == @customer %>
					<tr>
						<td><%= reservation_history.menu.shop.name %></td>
						<td><%= reservation_history.menu.name %></td>
						<td>
							<% reservation_history.history_comment.each do |history_comment| %>
								<span style="white-space: pre-wrap;"><%= history_comment.body %></span>
							<% end %>
						</td>
					</tr>
				<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
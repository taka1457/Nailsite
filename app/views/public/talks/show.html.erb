<div class="row" id="talk_count">
	<%= render partial: 'public/talks/follow', locals: { customer: @customer } %>
</div>
<div class="row">
	<div class="col-md-8 col-md-offset-2 col-xs-12">
		<h3>Contact</h3>
		<%= form_with model: @talk do |f| %>
			<div class="row">
				<div class="col-md-9 col-md-offset-1 col-xs-11 row-5">
				  <%= f.text_area :body, autofocus: true %>
				  <%= f.hidden_field :talk_room_id %>
				  <%= f.hidden_field :to_customer, value: @customer.id %>
				  <% if customer_signed_in? %>
				  	<%= f.hidden_field :customer_id, value: current_customer.id %>
				  <% elsif shop_signed_in? %>
				  	<%= f.hidden_field :customer_id, value: @customer.id %>
				  	<%= f.hidden_field :contributor, {value: 'shop'}  %>
				  <% end %>
				</div>
				<div class="col-md-1 col-xs-1"><br>
					<%= f.submit "送信", class: "btn btn-success btn-lg" %>
				</div>
			</div>
		<% end %>
		<div class="row">
			<div class="col-md-9 col-md-offset-1 col-xs-12">
			  <% @talks.each do |talk| %>
			  	<table class="table" style="table-layout:fixed;">
			  		<tr>
						  <% if customer_signed_in? %>
						    <% if talk.customer_id == current_customer.id %>
						    	<td class="col-md-3 col-xs-3 text-center">
						    		<%= link_to customer_path(current_customer) do %>
											<%= attachment_image_tag current_customer, :profile_image, format: "jpeg", fallback: "no-image.png", class: "profile_talk_image" %>
										<% end %><br>
										<span>You</span><br>
										<%= talk.created_at.strftime("%Y/%m/%d").to_s %><br>
										<%= talk.created_at.strftime("%H時%M分").to_s %>
						    	</td>
						    	<td class="col-md-8 col-xs-8" style="white-space: pre-wrap;"><%= talk.body %></td>
							  <% else %>
								  <td class="col-md-3 col-xs-3 text-center">
								  	<%= link_to customer_path(@customer) do %>
											<%= attachment_image_tag @customer, :profile_image, format: "jpeg", fallback: "no-image.png", class: "profile_talk_image" %>
										<% end %><br>
										<span><%= @customer.last_name %>さん</span><br>
										<%= talk.created_at.strftime("%Y/%m/%d").to_s %><br>
										<%= talk.created_at.strftime("%H時%M分").to_s %>
								  </td>
								  <td class="col-md-8 col-xs-8" style="white-space: pre-wrap;"><%= talk.body %></td>
						    <% end %>
						  <% elsif shop_signed_in? %>
						    <% if talk.contributor == "shop" %>
							    <td class="col-md-3 col-xs-3 text-center">
						    		<%= link_to customer_path(current_shop) do %>
											<%= attachment_image_tag current_shop, :shop_image, format: "jpeg", fallback: "no-image.png", class: "profile_talk_image" %>
										<% end %><br>
										<span>You</span><br>
										<%= talk.created_at.strftime("%Y/%m/%d").to_s %><br>
										<%= talk.created_at.strftime("%H時%M分").to_s %>
						    	</td>
						    	<td class="col-md-8 col-xs-8" style="white-space: pre-wrap;"><%= talk.body %></td>
							  <% else %>
							    <td class="col-md-3 col-xs-3 text-center">
								  	<%= link_to customer_path(@customer) do %>
											<%= attachment_image_tag @customer, :profile_image, format: "jpeg", fallback: "no-image.png", class: "profile_talk_image" %>
										<% end %><br>
										<span><%= @customer.last_name %>さん</span><br>
										<%= talk.created_at.strftime("%Y/%m/%d").to_s %><br>
										<%= talk.created_at.strftime("%H時%M分").to_s %>
								  </td>
								  <td class="col-md-8 col-xs-8" style="white-space: pre-wrap;"><%= talk.body %></td>
						    <% end %>
						  <% end %>
						</tr>
					</table>
				<% end %>
			</div>
		</div>
	</div>
</div>
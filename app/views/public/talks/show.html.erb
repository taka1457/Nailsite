<div class="row">
	<div class="col-md-10 col-md-offset-2">
		<h2>会員詳細</h2>
	</div>
	<div class="col-md-3 col-md-offset-2">
		<%= link_to customer_path(@customer) do %>
			<%= attachment_image_tag @customer, :profile_image, format: "jpeg", fallback: "no-image.png", class: "profile_image" %>
			<% end %>
	</div>
	<div class="col-md-4">
		<table>
			<tbody>
				<tr>
					<td>
						<h3>
							<%= link_to customer_path(@customer) do %>
								<%= @customer.full_name %>
							<% end %>
							さん</h3><br><br>
							<%= @customer.introduction %>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="col-md-3">
		<%= link_to 'フォローする', "", class: "btn btn-default nav-btn" %>
	</div>
</div>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h3>コンタクト</h3>
		<div class="message">
		  <% @talks.each do |talk| %>
		    <% if talk.customer_id == current_customer.id %>
			    <p style="text-align: right;"><%= talk.body %></p>
		    <% else %>
			    <p style="text-align: left;"><%= talk.body %></p>
		    <% end %>
		  <% end %>
		</div>

		<div class="col-md-12">
			<%= form_with model: @talk do |f| %>
			  <%= f.text_area :body %>
			  <%= f.hidden_field :talk_room_id %>
			  <div class="col-md-offset-9">
			  <%= f.submit "送信", class: "btn btn-success btn-lg" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
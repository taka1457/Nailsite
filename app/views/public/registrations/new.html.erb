<div class="row">
  <div class="col-md-7 col-md-offset-2">
    <h3>新規会員登録<span class="sub_title">　※全て必須入力です</span></h3>
  </div>
  <div class="col-md-3">
    <%= link_to '店舗様新規会員登録はこちら', new_shop_registration_path, data: {"turbolinks"=>false}, class: "btn btn btn-default btn-lg devise_btn" %>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if @customer.errors.any? %>
      <% end %>
      <table class="table-condensed">
        <tr>
          <td><%= f.label :名前 %></td>
          <td><%= f.label :'(姓）' %></td>
          <td>
            <%= f.text_field :last_name, autofocus: true, class: "last_name" %>
            <% if @customer.errors.include?(:last_name) %>
                <p style="color: red;"><%= @customer.errors.full_messages_for(:last_name).first %>
              <% end %>
          </td>
          <td><%= f.label :'　　(名）' %></td>
          <td>
            <%= f.text_field :first_name, class: "first_name" %>
            <% if @customer.errors.include?(:first_name) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:first_name).first %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :フリガナ %></td>
          <td><%= f.label :'(セイ)' %></td>
          <td>
            <%= f.text_field :last_name_kana, class: "last_name_kana" %>
            <% if @customer.errors.include?(:last_name_kana) %>
                <p style="color: red;"><%= @customer.errors.full_messages_for(:last_name_kana).first %>
              <% end %>
          </td>
          <td><%= f.label :'　　(メイ)' %></td>
          <td>
            <%= f.text_field :first_name_kana, class: "first_name_kana" %>
            <% if @customer.errors.include?(:first_name_kana) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:first_name_kana).first %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :'電話番号(ハイフンなし）' %></td>
          <td></td>
          <td>
            <%= f.text_field :phone_number, class: "phone_number" %>
            <% if @customer.errors.include?(:phone_number) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:phone_number).first %>
            <% end %>
          </td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :メールアドレス %></td>
          <td></td>
          <td>
            <%= f.email_field :email, autocomplete: "email", class: "email" %>
            <% if @customer.errors.include?(:email) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:email).first %>
            <% end %>
          </td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>
            <%= f.label :'パスワード' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上）</em>
              <% end %>
          </td>
          <td></td>
          <td>
            <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
            <% if @customer.errors.include?(:password) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:password).first %>
            <% end %>
          </td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :'パスワード(確認用）' %></td>
          <td></td>
          <td>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirmation" %>
            <% if @customer.errors.include?(:password_confirmation) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:password_confirmation).first %>
            <% end %>
          </td>
          <td></td>
          <td></td>
        </tr>
      </table>
      <div class="col-md-4 col-md-offset-4 devise_btn">
        <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-2">
    <h3>既に登録済みの方</h3>
    <%= link_to 'こちら', new_customer_session_path, class: "btn btn-default btn-lg" %> からログインしてください
  </div>
</div>
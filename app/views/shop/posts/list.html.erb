<div class="row">
	<h3><%= @shop.name %>　　　の投稿一覧</h3>
	<div class="col-md-10 col-md-offset-1">
		<table class="table">
			<tbody>
				<% @posts.each do |post| %>
				<tr>
					<td class="image_field">
						<%= link_to shop_post_path(@shop, post) do %>
						<%= attachment_image_tag post, :post_image, format: "jpeg", size: "30x20", fallback: "no-image.png", size: "60x50" %>
							<% end %>
						</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
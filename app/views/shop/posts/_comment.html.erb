<% post_comments.each do |post_comment| %>
	<tr>
		<td style="white-space: pre-wrap;"><%= post_comment.body %></td>
		<td><%= post_comment.customer.full_name %></td>
		<td><%= post_comment.created_at.to_s(:datetime_jp)  %></td>
		<% if customer_signed_in? %>
			<td>
				<% if current_customer == post_comment.customer %>
				  <%= link_to 'Destroy', shop_post_post_comment_path(shop.id, post.id, post_comment), class: 'btn-sm btn-danger', method: :delete, remote: true %>
				<% end %>
			</td>
		<% end %>
	</tr>
<% end %>

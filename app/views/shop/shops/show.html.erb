<section class="inner">
  <% if flash[:notice] %>
    <p class="text-active"><%= flash[:notice] %></p>
  <% end %>
	<h2 class="section-ttl">マイページ</h2>
	<h3>
		登録情報
		<%= link_to "編集する", edit_shop_information_path, class: "btn btn-success ml2" %>
		<%= link_to "パスワードを変更する", edit_shop_registration_path, class: "btn btn-success ml2" %>
	</h3>
	<table class="customer_info mb3">
		<thead>
			<th></th>
			<th></th>
			<th></th>
		</thead>
		<tbody>
			<tr>
				<td>名前</td>
				<td>(姓) <%= @shop.name %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td colspan="2"><%= @shop.email %></td>
			</tr>
			<tr>
				<td>電話番号</td>
				<td colspan="2"><%= @shop.phone_number %></td>
			</tr>
		</tbody>
	</table>
	<div class="flex">
		<%= link_to "配送先一覧", "", class: "btn btn-primary" %>
		<%= link_to "注文履歴一覧", "", class: "btn btn-primary ml2" %>
	</div>
</section>
<div>
  <% if flash[:notice] %>
    <p class="text-active"><%= flash[:notice] %></p>
  <% end %>
	<h2 class="section-ttl">マイページ</h2>
	<h3>
		登録情報
		<%= link_to "編集する", edit_shop_information_path, class: "btn btn-success ml2" %>
		<%= link_to "パスワードを変更する", edit_shop_registration_path, class: "btn btn-success ml2" %>
	</h3>
	<div class="col-xs-6">
		<table class="table table-bordered table-condensed">
			<tbody>
				<tr>
					<td>店舗名</td>
					<td><%= @shop.name %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td><%= @shop.email %></td>
				</tr>
				<tr>
					<td>店舗住所</td>
					<td>〒<%= @shop.postal_code %><br><%= @shop.full_address %></td>
				</tr>
				<tr>
					<td>店舗予算(目安)</td>
					<td><%= @shop.budget %>円</td>
				</tr>
				<tr>
					<td>席数</td>
					<td><%= @shop.seat %>席</td>
				</tr>
				<tr>
					<td>スタッフ数</td>
					<td><%= @shop.staff %>人</td>
				</tr>
				<tr>
					<td>交通手段</td>
					<td><%= @shop.traffic_method %></td>
				</tr>
				<tr>
					<td>お支払い方法</td>
					<td><%= @shop.payment_method %></td>
				</tr>
				<tr>
					<td>営業時間</td>
					<td><%= @shop.business_hours %></td>
				</tr>
				<tr>
					<td>駐車場情報</td>
					<td><%= @shop.parking %></td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="col-xs-6">
		<table class="table table-bordered table-condensed">
      <tr>
				<td style="width:100px;">店舗アピールポイント</td>
				<td class="row-2"><%= @shop.promotion %></td>
			</tr>
			<tr>
				<td>店舗紹介</td>
				<td class="row-5"><%= @shop.introduction %></td>
			</tr>
      <tr>
        <td>店内写真</td>
        <td class="image_field">
            <%= attachment_image_tag @shop, :shop_image, format: "jpeg", id: "img_prev", fallback: "no-image.png", class: "preview_image" %>
        </td>
      </tr>
      <tr>
        <td>おすすめジャンル</td>
        <td><%= @shop.genre %></td>
      </tr>
    </table>
  </div>


	<div class="flex">
		<%= link_to "配送先一覧", "", class: "btn btn-primary" %>
		<%= link_to "注文履歴一覧", "", class: "btn btn-primary ml2" %>
	</div>
</div>


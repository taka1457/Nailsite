<h2>店舗一覧</h2>
<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<table class="table">
			<tbody>
				<% @shops.each do |shop| %>
				<tr>
					<td class="image_field">
						<%= link_to shop_path(shop) do %>
		        <%= attachment_image_tag shop, :shop_image, format: "jpeg", size: "60x50", fallback: "no-image.png", class: "preview_image" %>
		        <% end %>
		      </td>
					<td>
						<%= link_to shop_path(shop) do %>
							<%= shop.name %><br>
						<% end %>
						<%= shop.introduction %><br>
						<%= shop.full_address %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-xs-offset-5">
		<%= paginate @shops %>
	</div>
</div>
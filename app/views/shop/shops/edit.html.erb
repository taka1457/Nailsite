<section class="inner">
  <h2 class="section-ttl">会員情報編集</h2>
  <%= form_for(@shop, url: update_shop_information_path) do |f| %>
    <table class="customer_info customer_form">
      <thead>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td>名前</td>
          <td><%= f.label :name, "名前", class: "customer_name" %> <%= f.text_field :name, :placeholder =>"#{@shop.name}" %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@shop.email}" %></td>
        </tr>
        <tr>
          <td><%= f.label :phone_number, "電話番号(ハイフンなし10or11桁)" %></td>
          <td colspan="2"><%= f.text_field :phone_number, :placeholder =>"#{@shop.phone_number}" %></td>
        </tr>
        <tr>
          <td colspan="2"><%= f.submit "編集内容を保存する", class: "btn btn-primary" %></td>
          <td><%= link_to "退会する", confirm_shop_unsubscribe_path, class: "btn btn-danger" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</section>
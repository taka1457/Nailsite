<div class="row">
	<div class="col-md-10 col-md-offset-2">
		<h2>サロン詳細</h2>
	</div>
	<div class="col-md-3 col-md-offset-2">
		<%= link_to shop_path(@shop) do %>
			<%= attachment_image_tag @shop, :shop_image, format: "jpeg", fallback: "no-image.png", class: "profile_image" %>
			<% end %>
	</div>
	<div class="col-md-4">
		<table>
			<tbody>
				<tr>
					<td>
						<h3>
							<%= link_to shop_path(@shop) do %>
								<%= @shop.name %>
							<% end %>
							さん</h3><br>
							<%= @shop.promotion %><br>
							<%= @shop.introduction %>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="col-md-3">
		<span id="show_bookmark" style="font-size: 40px;"><%= render partial: 'shop/bookmarks/form', locals: { shop: @shop } %></span>
	</div>
</div>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h3>コンタクト</h3>
		<div class="message">
		  <% @talks.each do |talk| %>
		    <% if talk.contributor == "shop" %>
			    <p style="text-align: left;"><%= talk.body %></p>
			  <% else %>
			    <p style="text-align: right;"><%= talk.body %></p>
		    <% end %>
			<% end %>
		</div>

		<div class="col-md-12">
			<%= form_with model: [:shop, @talk] do |f| %>
			  <%= f.text_area :body, autofocus: true %>
			  <%= f.hidden_field :talk_room_id %>
			  <%= f.hidden_field :shop_id, value: @shop.id %>
			  <%= f.hidden_field :customer_id, value: current_customer.id %>
			  <div class="col-md-offset-9">
			  <%= f.submit "送信", class: "btn btn-success btn-lg" %>
			</div>
			<% end %>
		</div>
	</div>
</div>